{
  "ts-node": {
    "files": true
  },
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2019",
    "outDir": "./dist",
    "baseUrl": "./",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "incremental": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "strict": true,
    "typeRoots": ["./@types", "./node_modules/@types"]
  },
  "include": ["./src/**/*", "./test/**/*", "./@types/**/*"]
}
